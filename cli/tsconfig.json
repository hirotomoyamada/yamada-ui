{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "compileOnSave": true,
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
